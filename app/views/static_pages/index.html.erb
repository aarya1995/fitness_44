		   $(document).scroll(function() { 
		      scroll_start = $(this).scrollTop();
		      if(scroll_start > offset.top) {
		          $('#navbar').css(
		          	'background-color', '#fff'
		          	);

		          $('.navbar-brand').css(
		          	'color', 'black'
		          	);
				  
				  $('.nav-link').css(
		          	'color', 'black'
		          	);

		       } else {
		          $('#navbar').css('background-color', 'transparent');

		          $('.navbar-brand').css(
		          	'color', 'white'
		          	);

		          $('.nav-link').css(
		          	'color', 'white'
		          	);
		       }
		   });
		});

	</script>

